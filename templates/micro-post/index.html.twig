{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <p class="d-block text-right">
        <a href="{{ path('micro_post_add') }}" class="badge badge-primary">add new</a>
        <a href="{{ path('security_logout') }}" class="badge badge-secondary">logout</a>
    </p>

    <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>

    {% for post in posts %}
        <a href="{{ path('micro_post_fetch', {'id' : post.id}) }}">
          {{  include('micro-post/post.html.twig', {'post' : post })  }}
        </a>
        <p class="d-block text-right">
           <a href="{{ path('micro_post_edit', {'id': post.id }) }}" class="badge badge-pill badge-light">Edit post : {{ post.id }}</a>
           <a href="{{ path('micro_post_delete', {'id': post.id }) }}" class="badge badge-pill badge-info">Remove post : {{ post.id }}</a>
        </p>
    {% endfor %}
{% endblock %}
