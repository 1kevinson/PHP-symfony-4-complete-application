{% extends 'base.html.twig' %}

{% block title %}Blog Index{% endblock %}

{% block body %}
    {% for id, post, date in posts %}
        <p><a href="{{ path('blog_show', {'id' : id}) }}">ID {{ id }}</a></p>
        <h3>{{ post.title }}</h3>
        <p>{{ post.text }}</p>
        {% if post.date is defined %}
            <p>{{ post.date | date('H:i:s') }}</p>
        {% endif %}
        <hr>
    {% endfor %}
{% endblock %}